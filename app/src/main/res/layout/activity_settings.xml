<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmad.tabdemo.Settings"
    android:orientation="vertical"
    android:background="#FFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:text="General"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Notifications"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#eae8e8"
            android:backgroundTintMode="multiply"
            android:paddingLeft="10dp"
            android:clickable="true" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Sounds"

            android:checked="true"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:paddingLeft="10dp"
            android:thumb="@drawable/round"
            android:enabled="true"
            android:clickable="true"
            android:backgroundTint="#e8e8e8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc3c7"/>
    </LinearLayout><!-- General-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:text="Personal Information"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Status"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Address"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc3c7"/>
    </LinearLayout><!-- Personal Info-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:text="Comunities"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:switchPadding="100dp"
            android:checked="true"
            android:text="Allow people to invite you"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"
            android:enabled="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc3c7"/>
    </LinearLayout><!-- Comunities-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Privacy"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Hide Personal Info"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Blocked Contacts"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="#FFF"
            android:backgroundTint="#ffffff"
            android:backgroundTintMode="screen"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdc3c7"/>
    </LinearLayout><!-- Privacy-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
